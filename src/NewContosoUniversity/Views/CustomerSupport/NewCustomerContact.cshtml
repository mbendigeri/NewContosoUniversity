@model NewContosoUniversity.Models.CustomerSupport.ViewModelNewCustomerContact

@{
    ViewData["Title"] = "NewCustomerContact";
}
<div class="container">
    <h1 class="well">New Contact details</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form asp-action="NewCustomerContact">

                @Html.HiddenFor(m => m.CustomerID, new { value = Model.CustomerID })

                @Html.ValidationSummary()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-3 form-group">
                            <label>@Html.DisplayNameFor(model => model.ContactPerson)</label>
                            <span class="form-horizontal">
                                <label class="glyphicon glyphicon-user"></label>
                                <input asp-for="ContactPerson" type="text" placeholder="Enter contact person name Here.." class="form-control">
                                <span asp-validation-for="ContactPerson" class="text-danger" />
                            </span>
                        </div>
                        <div class="col-sm-3 form-group">
                            <label>@Html.DisplayNameFor(model => model.Email)</label>
                            <span class="form-horizontal">
                                <label class="glyphicon glyphicon-envelope"></label>
                                <input asp-for="Email" type="text" placeholder="Enter Email Here.." class="form-control">
                                <span asp-validation-for="Email" class="text-danger" />
                            </span>
                        </div>
                        <div class="col-sm-2 form-group">
                            <label>@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                            <span class="form-horizontal">
                                <label class="glyphicon glyphicon-phone-alt"></label>

                                <input asp-for="PhoneNumber" type="text" placeholder="Enter PhoneNumber Here.." class="form-control">
                                <span asp-validation-for="PhoneNumber" class="text-danger" />
                            </span>
                        </div>
                        <div class="col-sm-2 form-group">
                            <label>@Html.DisplayNameFor(model => model.PrimaryPhone)</label>
                            <div class="checkbox">
                                <label style="font-size:medium">
                                    <input asp-for="PrimaryPhone" type="checkbox" placeholder="Is this PrimaryPhone?.." class="form-control">
                                    <span class="cr"><i class="cr-icon fa fa-check"></i></span>
                                    <span asp-validation-for="PrimaryPhone" class="text-danger" />
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-2 form-group">
                            <label>@Html.DisplayNameFor(model => model.EmergencyPhone)</label>
                            <div class="checkbox">
                                <label style="font-size:medium">
                                    <input asp-for="EmergencyPhone" type="checkbox" placeholder="Is this EmergencyPhone?.." class="form-control">
                                    <span class="cr"><i class="cr-icon fa fa-check"></i></span>
                                    <span asp-validation-for="EmergencyPhone" class="text-danger" />
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3 form-group">
                            <label>@Html.DisplayNameFor(model => model.LinkedInURL)</label>
                            <span class="form-horizontal">
                                <label class="glyphicon glyphicon-envelope"></label>

                                <input asp-for="LinkedInURL" type="text" placeholder="Enter LinkedIn Here.." class="form-control">
                                <span asp-validation-for="LinkedInURL" class="text-danger" />
                            </span>
                        </div>
                        <div class="col-sm-3 form-group">
                            <label>@Html.DisplayNameFor(model => model.WebsiteURL)</label>
                            <span class="form-horizontal">
                                <label class="glyphicon glyphicon-envelope"></label>
                                <input asp-for="WebsiteURL" type="text" placeholder="Enter WebsiteURL Here.." class="form-control">
                                <span asp-validation-for="WebsiteURL" class="text-danger" />
                            </span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">

                            <button type="submit" value="NewCustomerContact" class="btn btn-lg btn-info">Submit</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>



